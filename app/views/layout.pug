doctype html
html
  head
    link(rel="stylesheet", href="/bootstrap/css/bootstrap.min.css")
  body
    header
      nav(class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top")
        div.container-fluid
          a(class="navbar-brand", href="/") My Website
          button(class="navbar-toggler", type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
            span(class="navbar-toggler-icon")
          div(class="collapse navbar-collapse", id="navbarNav")
            ul(class="navbar-nav ms-auto") 
              li(class="nav-item")
                a(class="nav-link", href="/") Home

                if user
                    li.nav-item
                        span.nav-link Hello #{user.username}

                    li.nav-item.me-2
                        a.btn.btn-primary(href="/myPosts") My Posts

                    li.nav-item
                        form(id="logout-form", action="/logout" method="POST")
                            button(type="submit" class="btn btn-danger") Logout

                        script.
                            document.getElementById('logout-button').addEventListener('click', function(e) {
                                e.preventDefault();  
                                document.getElementById('logout-form').submit();  
                            });
                    
                 

                else
                    li.nav-item
                        a.nav-link(href="/register") Register
                    li.nav-item
                        a.nav-link(href="/login") Login
                
                if user
                  if user.isAdmin
                    a.btn.btn-success.ms-2(href="/adminPanel") Admin Panel

    
    block content

    script(src="/bootstrap/js/bootstrap.bundle.min.js")
